<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainactivity.MainActivity">

   <android.support.v4.view.ViewPager
           android:id="@+id/m_vp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
   </android.support.v4.view.ViewPager>
<RadioGroup
        android:id="@+id/m_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal"
       android:background="#EEE8E8">

   <RadioButton
        android:id="@+id/rb_select_class"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/radiobutton"
        android:text="选课"
        android:checked="true"
        android:textColor="@drawable/radiobutton_select"
        android:drawableTop="@drawable/ic_select_class"

   />

   <RadioButton
           android:id="@+id/rb_study"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           style="@style/radiobutton"
           android:text="学习中心"
           android:textColor="@drawable/radiobutton_select"
           android:drawableTop="@drawable/ic_select_class"
   />
   <RadioButton
           android:id="@+id/rb_member"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           style="@style/radiobutton"
           android:text="会员"
           android:textColor="@drawable/radiobutton_select"
           android:drawableTop="@drawable/ic_select_class"
   />
   <RadioButton
           android:id="@+id/rb_aboutMy"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           style="@style/radiobutton"
           android:text="我的"
           android:textColor="@drawable/radiobutton_select"
           android:drawableTop="@drawable/ic_select_class"
   />
</RadioGroup>


</RelativeLayout>