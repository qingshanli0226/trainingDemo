<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.Activity.VedioActivity"
  >
    <LinearLayout
            android:id="@+id/vedioPagerLinerLayout"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:background="#8E002E"
            android:gravity="center_vertical"
            android:layout_height="65dp">
        <ImageView
                android:layout_marginTop="10dp"
                android:id="@+id/vedioPagerReturnBtn"
                android:layout_marginLeft="15dp"
                android:src="@mipmap/icon_back_black"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/vedioPagerTitle"
                android:text="第一讲走近钢琴   第一节 认识钢琴键盘"
                android:textColor="#EEEEEE"
                android:textSize="17sp"
                android:layout_width="200dp"
                android:layout_marginLeft="100dp"
                android:singleLine="true"
                android:layout_height="wrap_content" />
    </LinearLayout>
    <cn.jzvd.JZVideoPlayerStandard
            android:layout_below="@+id/vedioPagerLinerLayout"
            android:visibility="invisible"
            android:id="@+id/myJZ"
            android:layout_width="match_parent"
            android:scaleType="fitXY"
            android:layout_height="250dp">

    </cn.jzvd.JZVideoPlayerStandard>
    <ImageView
            android:layout_below="@+id/vedioPagerLinerLayout"
            android:id="@+id/vedioPageVedioImg"
            android:src="@mipmap/dawankm"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="250dp" />
    <TextView
            android:alpha="0.8"
            android:layout_marginTop="185dp"
            android:layout_centerHorizontal="true"
            android:id="@+id/vedioPageTray"
            android:text="试看"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:textSize="15sp"
            android:textColor="#EEEEEE"
            android:background="@drawable/studentcentershape"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <ImageView
            android:id="@+id/vedioPageTeacherShareBtn"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/vedioPageTeacherCollectBtn"
            android:layout_alignBottom="@+id/myJZ"
            android:src="@mipmap/imag_share"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toLeftOf="@+id/vedioPageTeacherCollectBtn"/>
    <ImageView
            android:id="@+id/vedioPageTeacherCollectBtn"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="10dp"
            android:layout_toStartOf="@+id/vedioPageTeacherBuyBtn"
            android:layout_alignBottom="@+id/myJZ"
            android:src="@mipmap/imag_shoucang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toLeftOf="@+id/vedioPageTeacherBuyBtn"/>
    <ImageView
            android:id="@+id/vedioPageTeacherBuyBtn"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="10dp"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/myJZ"
            android:src="@mipmap/imag_mai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <ImageView
            android:layout_marginTop="-20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/myJZ"
            android:id="@+id/vedioPageTeacherPhoto"
            android:src="@mipmap/ic_launcher"
            android:layout_width="80dp"
            android:layout_height="80dp" />
    <TextView
            android:id="@+id/vedioPageTeacherName"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_alignTop="@+id/vedioPageTeacherPhoto"
            android:layout_toEndOf="@+id/vedioPageTeacherPhoto"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="刘俊"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toRightOf="@+id/vedioPageTeacherPhoto"/>
    <TextView
            android:id="@+id/vedioPageTeacherTitle"
            android:textColor="#000000"
            android:textSize="15sp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/vedioPageTeacherName"
            android:layout_toEndOf="@+id/vedioPageTeacherName"
            android:text="中央音乐学院声乐系副教授"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_toRightOf="@+id/vedioPageTeacherName"/>
    <TextView
            android:id="@+id/vedioPageCourseName"
            android:layout_marginTop="5dp"
            android:layout_alignStart="@+id/vedioPageTeacherName"
            android:layout_below="@+id/vedioPageTeacherName"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="从零开始学声乐"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:layout_alignLeft="@+id/vedioPageTeacherName"/>
    <TextView
            android:id="@+id/vedioPageCoursePrice"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/myJZ"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="#8E002E"
            android:text="320元"
            android:textSize="20sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    <android.support.design.widget.TabLayout
            android:id="@+id/vedioPageTabLayout"
            android:layout_marginTop="30dp"
            android:layout_below="@+id/vedioPageTeacherPhoto"
            android:layout_width="match_parent"
            app:tabIndicatorColor="#8E002E"
            android:layout_height="50dp">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
            android:id="@+id/vedioPageViewPager"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/vedioPageTabLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
</RelativeLayout>