<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/banner_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottombarOrHeardHeight"
        android:background="@drawable/banner_bg"></LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="@dimen/banner_radius"
        app:cardElevation="@dimen/margin_leftAndRight"
        android:layout_marginLeft="@dimen/banner_leftAndright"
        android:layout_marginRight="@dimen/banner_leftAndright"
        android:layout_marginTop="@dimen/margin_leftAndRight"
        android:layout_marginBottom="@dimen/margin_leftAndRight"
        >

        <com.youth.banner.Banner
            android:id="@+id/find_item_banner"
            android:layout_width="match_parent"
            android:layout_height="match_parent"></com.youth.banner.Banner>

    </android.support.v7.widget.CardView>

</RelativeLayout>