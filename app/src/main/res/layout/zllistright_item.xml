<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:id="@+id/zllistright_linearlayout"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="horizontal">

    <ImageView
            android:id="@+id/zllistright_image"
            android:layout_width="155dp"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/jiangyinglian7"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:layout_gravity="center"
            android:orientation="vertical">

        <TextView
                android:id="@+id/zllistright_tv1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鲁特琴演奏作品集"
                android:layout_marginLeft="10dp"
                android:textSize="15dp"
                android:textColor="@android:color/black"/>

        <TextView
                android:id="@+id/zllistright_tv2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="鲁特琴演奏作品集"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"/>

        <TextView
                android:id="@+id/zllistright_tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="免费"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_marginRight="15dp"

                android:textColor="@android:color/holo_red_dark"/>

    </LinearLayout>

</LinearLayout>