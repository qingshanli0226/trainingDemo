<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="@dimen/banner_leftAndright"
    android:layout_height="@dimen/special_height">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/avatarSize">



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="专栏"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginLeft="@dimen/topAndBottom_padding"
            android:textStyle="bold"
            android:id="@+id/special_zl"
            android:textSize="@dimen/master_textsize"
            android:textColor="@color/wangdashi"
            />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:textStyle="bold"
                android:text="专区"
                android:textSize="@dimen/master_textsize"
                app:layout_constraintLeft_toRightOf="@id/special_zl"
                android:textColor="@color/textColor"
                />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/special_more_textsize"
            android:textColor="@color/textColor"
            android:layout_gravity="right"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="更多>>"/>
    </android.support.constraint.ConstraintLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_weight"
        android:layout_weight="1"
        android:id="@+id/item_special_recyclerview"></android.support.v7.widget.RecyclerView>

</LinearLayout>