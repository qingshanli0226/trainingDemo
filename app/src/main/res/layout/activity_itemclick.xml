<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:fresco="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@color/white_color"
                android:layout_height="match_parent"
>
    <include layout="@layout/toolbar" android:id="@+id/one"/>



    <RelativeLayout
            android:id="@+id/two"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.31"
            android:layout_below="@+id/one"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true">
        <RelativeLayout android:layout_width="match_parent" android:layout_height="@dimen/px_240"

        >
            <ImageView android:layout_width="match_parent" android:layout_height="@dimen/px_240"
                       android:id="@+id/click_img"
                       android:scaleType="centerCrop"
                       android:layout_alignParentStart="true" android:layout_alignParentTop="true"
                       android:layout_alignParentLeft="true"/>
            <Button android:layout_width="@dimen/px_50" android:layout_height="30dp"
                    android:text="试看"
                    android:background="@drawable/btn_look"
                    android:textColor="@color/white_color"
                    android:textSize="@dimen/size_12"
                    android:id="@+id/click_btn"
                    android:layout_centerInParent="true"/>
        </RelativeLayout>



        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/px_42"

                android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true">


            <TextView

                    android:layout_marginLeft="@dimen/px_100"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_20"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/size_13"
                    android:id="@+id/click_writer"
                    tools:ignore="RtlHardcoded"/>
            <TextView android:layout_width="wrap_content" android:layout_height="@dimen/px_20"

                      android:textSize="@dimen/size_12"
                      android:lines="1"
                      android:textColor="@color/black_color"
                      android:layout_marginLeft="@dimen/px_10"
                      android:ellipsize="end"
                      android:id="@+id/click_writerdata"
                      android:layout_toEndOf="@+id/click_writer" android:layout_alignBaseline="@+id/click_writer"
                      android:layout_toRightOf="@+id/click_writer"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/px_20"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/size_13"
                    android:id="@+id/click_className"

                    android:layout_alignParentBottom="true" android:layout_alignStart="@+id/click_writer"
                    android:layout_alignLeft="@+id/click_writer"/>
        </RelativeLayout>


        <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="@dimen/px_70"
                android:layout_height="@dimen/px_70"
                android:id="@+id/click_writerImg"
                fresco:roundAsCircle="true"

                android:layout_alignParentStart="true" android:layout_marginStart="@dimen/px_17"
                android:layout_alignParentBottom="true" android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/px_17"/>
    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="0.56">

        <android.support.design.widget.TabLayout 
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.11"
                fresco:tabTextColor="@color/black_color"
                fresco:tabSelectedTextColor="@color/select_tab"
                fresco:tabTextAppearance="@style/TabLayoutTextStyle"
                android:id="@+id/click_tab"
                tools:ignore="NestedWeights">
        </android.support.design.widget.TabLayout>
        <View android:layout_width="match_parent"
              android:layout_height="0dp"
              android:layout_weight="0.02"
              android:background="@color/gray1_color"/>

        <android.support.v4.view.ViewPager
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.87"
                android:id="@+id/click_vp"
        />
    </LinearLayout>


    <View android:layout_width="match_parent" android:layout_height="@dimen/px_1"
          android:background="@color/gray2_color"
            android:layout_marginLeft="@dimen/px_20"
            android:layout_marginRight="@dimen/px_20"

    />



    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
    android:layout_weight="0.10"

    >
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/px_15"
                android:layout_marginRight="@dimen/px_15"
                      android:layout_marginTop="@dimen/px_5"
                      android:layout_marginBottom="@dimen/px_5"
                android:orientation="vertical"

        >
            <RelativeLayout
                    android:layout_width="match_parent"
                          android:layout_height="0dp"
                          android:layout_weight="0.4"

                          android:orientation="horizontal"
            >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:id="@+id/click_vipprice"
                          android:textColor="@color/black_color"
                          android:paddingLeft="@dimen/px_10"
                          android:gravity="center"
                          android:textSize="@dimen/size_12"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="match_parent"
                          android:text="@string/itemclick_title2"
                          android:layout_alignParentRight="true"
                          android:layout_marginRight="@dimen/px_10"
                          android:textColor="@color/orange_color"
                          android:gravity="center"
                          android:textSize="@dimen/size_12"
                />
            </RelativeLayout>


            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="@drawable/layer"
                    android:layout_weight="0.6"
                    android:orientation="horizontal"
            >
                <TextView android:layout_width="wrap_content"
                          android:layout_height="match_parent"
                          android:textColor="@color/orange_color"
                          android:gravity="center"
                          android:textSize="@dimen/size_16"
                          android:id="@+id/click_price"
                          android:paddingLeft="@dimen/px_10"
                />
                <Button android:layout_width="@dimen/px_120"
                        android:layout_height="match_parent"
                          android:text="@string/itemclick_buy_title"
                          android:gravity="center"
                          android:layout_alignParentRight="true"

                            android:textColor="@color/white_color"
                        android:background="@color/orange_color"
                          android:textSize="@dimen/size_15"
                />
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>