<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.register.RegisterActivity">
    <com.example.player.a1610aplayerdemo.base.MToolBar
            android:id="@+id/register_toolbar"
            android:layout_width="match_parent"
            android:layout_height="50dp"
    app:title="手机号注册">
    </com.example.player.a1610aplayerdemo.base.MToolBar>

    <LinearLayout
            android:layout_below="@+id/register_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical"
    >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_howdy"
                android:textSize="23sp"/>
        <TextView
                android:id="@+id/tv_login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_tv_login"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_tv_phone"
                android:layout_marginTop="15dp"/>
        <EditText
                android:id="@+id/ed_register_phone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/register_ed_hint"
               />
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_tv_code"
                android:layout_marginTop="15dp"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                    android:id="@+id/ed_register_code"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/register_ed_code_hint"
                    android:drawableRight="@drawable/ic_eye_img"
            />
            <Button android:layout_width="wrap_content"
                    android:id="@+id/gain_code"
                    android:layout_height="30dp"
            android:text="@string/register_btn_gain_conde"
            android:background="@color/colorWhite"
            android:layout_alignParentRight="true"/>
        </RelativeLayout>

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content">
            <CheckBox
                    android:id="@+id/checkbox_consent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/register_tv_consent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/register_consent"/>
        </LinearLayout>

        <Button
                android:id="@+id/register_btn_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/register_btn_next"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="10dp"
                android:background="@color/colorGray8"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:layout_gravity="center_horizontal"/>
    </LinearLayout>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_tv_problem"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:layout_alignParentBottom="true"/>

</RelativeLayout>