<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".loginactivity.LoginActivity"
android:orientation="vertical">

      <com.example.player.a1610aplayerdemo.base.MToolBar
              android:id="@+id/login_toolbar"
              android:layout_width="match_parent"
              android:layout_height="50dp">

      </com.example.player.a1610aplayerdemo.base.MToolBar>

     <LinearLayout
             android:layout_below="@+id/login_toolbar"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
     android:layout_margin="10dp"
     android:orientation="vertical">
           <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
           android:text="您好,"
           android:textSize="23sp"/>
           <TextView
                   android:id="@+id/tv_ljRegister"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="\n欢迎来到央音在线，立即免费注册"
           />

           <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
           android:text="手机号："
           android:layout_marginTop="15dp"/>
           <EditText
                   android:id="@+id/ed_login_phone"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="请输入您的手机号码"
           android:background="@android:drawable/editbox_dropdown_light_frame"/>
           <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="密码："
                   android:layout_marginTop="15dp"/>
           <EditText
                   android:id="@+id/ed_login_pwd"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:hint="请输入密码"
                   android:drawableRight="@drawable/ic_eye_img"
                   android:background="@android:drawable/editbox_dropdown_light_frame"/>

           <Button
                   android:id="@+id/bt_longin"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:text="登录"
                   android:textColor="#fff"
                   android:layout_marginTop="10dp"
           android:background="@drawable/circlebackground"/>
     </LinearLayout>
<TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
android:text="登录遇到问题？"
android:layout_centerHorizontal="true"
android:layout_margin="10dp"
android:layout_alignParentBottom="true"/>
</RelativeLayout>