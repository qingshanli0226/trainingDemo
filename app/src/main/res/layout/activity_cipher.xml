<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".my.activity.CipherActivity"
        android:orientation="vertical">

    <EditText
            android:id="@+id/pwdone_edit"
            android:hint="@string/register_text_nice"
            android:layout_marginTop="40dp"
            android:inputType="number"
            style="@style/register_text_edittext"/>

    <EditText
            android:layout_marginTop="20dp"
            android:id="@+id/pwdtwo_edit"
            android:hint="@string/register_text_nice"
            android:inputType="number"
            style="@style/register_text_edittext"/>

    <Button
            android:id="@+id/cipher_button"
            android:text="@string/login_text_eight"
            style="@style/register_text_button"/>

</LinearLayout>