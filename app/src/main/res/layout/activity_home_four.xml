<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.home_activity.zllistactivity.Home_Four">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@android:color/white">


        <TextView
                android:id="@+id/homefour_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="走进鲁特琴的世界"
                android:textSize="16sp"
                android:layout_centerInParent="true"
                android:textColor="@android:color/black"/>

    </RelativeLayout>

    <ImageView
            android:id="@+id/homefour_image"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/jiangyinglian8"/>

    <android.support.design.widget.TabLayout
            android:id="@+id/homefour_tb"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@android:color/white">
    </android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/homefour_vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>

</LinearLayout>