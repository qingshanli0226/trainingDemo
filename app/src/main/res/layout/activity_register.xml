<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".my.activity.RegisterActivity"
        android:orientation="vertical">

    <android.support.v7.widget.Toolbar
            android:background="@color/colorColor"
            style="@style/mw">

        <ImageView
                android:id="@+id/feedback_back"
                style="@style/my_textView_wwt"
                android:src="@drawable/ic_back"/>

        <TextView
                android:text="@string/register_text_one"
                style="@style/feedback_opinion"/>

        <TextView
                android:text="@string/register_text_two"
                style="@style/register_text_one"/>

    </android.support.v7.widget.Toolbar>

    <TextView
            android:text="@string/register_text_three"
            style="@style/register_text_two"/>

    <LinearLayout
            style="@style/register_text_ll_one">

        <TextView
                android:text="@string/register_text_four"
                style="@style/register_text_text_three"/>

        <TextView
                android:id="@+id/login_text"
                android:text="@string/register_text_five"
                style="@style/register_text_text_four"/>

    </LinearLayout>

    <TextView
            android:text="@string/register_text_six"
            style="@style/register_text_five"/>

    <EditText
            android:id="@+id/account_edit"
            android:hint="@string/register_text_seven"
            style="@style/register_text_edittext"/>

    <TextView
            android:text="@string/register_text_eight"
            style="@style/register_text_six"/>

    <RelativeLayout
            style="@style/ww">

        <EditText
                android:id="@+id/password_edit"
                android:hint="@string/register_text_nice"
                style="@style/register_text_edittext"/>

        <TextView
                android:id="@+id/show_hidden"
                android:text="@string/register_text_ten"
                style="@style/register_text_seven"/>

    </RelativeLayout>

    <Button
            android:id="@+id/ok_button"
            android:text="@string/register_text_eleven"
            style="@style/register_text_button"/>

</LinearLayout>