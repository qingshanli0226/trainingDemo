<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".mainactivity.MainActivity">

   <android.support.v4.view.ViewPager
           android:id="@+id/m_vp"
           android:layout_width="match_parent"
           android:layout_height="match_parent">
   </android.support.v4.view.ViewPager>


   <android.support.design.widget.BottomNavigationView
           android:id="@+id/m_bnv"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:layout_alignParentBottom="true"
           app:menu="@menu/bottmo_tb_menu"
           app:itemTextColor="@drawable/radiobutton_select"
           app:itemIconTint="@drawable/radiobutton_select"
   android:background="#fff"
   app:labelVisibilityMode="labeled">

   </android.support.design.widget.BottomNavigationView>

<RadioGroup
        android:id="@+id/m_rg"
        android:layout_width="match_parent"
        android:layout_height="50dp"
       android:layout_alignParentBottom="true"
       android:orientation="horizontal"
       android:background="#EEE8E8"
android:visibility="gone">

   <RadioButton
        android:id="@+id/rb_select_class"
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        style="@style/radiobutton"
        android:text="@string/main_rb_selectclass"
        android:checked="true"
        android:textColor="@drawable/radiobutton_select"
        android:drawableTop="@drawable/ic_select_class"

   />

   <RadioButton
           android:id="@+id/rb_study"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           style="@style/radiobutton"
           android:text="@string/main_rb_study"
           android:textColor="@drawable/radiobutton_select"
           android:drawableTop="@drawable/ic_select_class"
   />
   <RadioButton
           android:id="@+id/rb_member"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           style="@style/radiobutton"
           android:text="@string/main_rb_member"
           android:textColor="@drawable/radiobutton_select"
           android:drawableTop="@drawable/ic_select_class"
   />
   <RadioButton
           android:id="@+id/rb_aboutMy"
           android:layout_width="0dp"
           android:layout_weight="1"
           android:layout_height="match_parent"
           style="@style/radiobutton"
           android:text="@string/main_rb_aboutme"
           android:textColor="@drawable/radiobutton_select"
           android:drawableTop="@drawable/ic_select_class"
   />
</RadioGroup>


</RelativeLayout>