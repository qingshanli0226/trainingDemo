<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".logregistui.AddPassWordActivity">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="60dp">
        <TextView android:layout_width="40dp" android:layout_height="match_parent" android:text="＜" android:gravity="center" android:textColor="#000" android:onClick="fanhui"/>

        <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:text="设置密码" android:layout_centerInParent="true" android:gravity="center" />

    </RelativeLayout>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="密码"/>

    <EditText android:layout_width="match_parent" android:layout_height="wrap_content"  android:id="@+id/add_pwd1"/>

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="确认密码"/>


    <EditText android:layout_width="match_parent" android:layout_height="wrap_content" android:id="@+id/add_pwd2"/>

    <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_gravity="center" android:text="完成注册，并登录" android:onClick="finishReg" android:background="#8F002E" android:textColor="#fff"/>


</LinearLayout>