<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/master_height"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/item_master_items_card"
        android:layout_width="match_parent"
        android:layout_height="@dimen/master_cardHeight"
        app:cardCornerRadius="@dimen/avatarSize"
        app:cardMaxElevation="@dimen/margin_leftAndRight"
        android:layout_margin="@dimen/margin_topAndBottom">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/item_master_items_img"/>

            <TextView
                android:id="@+id/item_master_items_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录播课"
                android:background="#9C3434"
                android:paddingLeft="@dimen/margin_leftAndRight"
                android:paddingRight="@dimen/margin_leftAndRight"
                android:paddingTop="@dimen/topAndBottom_padding"
                android:paddingBottom="@dimen/topAndBottom_padding"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/avatarSize"
                android:textColor="#fff"

                />

        </RelativeLayout>
        
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="@dimen/topAndBottom_padding"
        android:layout_marginLeft="@dimen/margin_topAndBottom"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/item_master_items_card"
        android:layout_height="@dimen/avatarSize">
        <TextView
            android:id="@+id/item_master_items_title"
            android:layout_width="@dimen/main_weight"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="adsadasdas"
            android:textColor="#000"

            />

        <TextView
            android:layout_width="@dimen/main_weight"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="adsadasdas"
            android:textColor="#ccc"
            android:gravity="right"
            android:id="@+id/item_master_items_teacher"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="@dimen/topAndBottom_padding"
        android:layout_marginLeft="@dimen/margin_topAndBottom"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="@dimen/banner_leftAndright">

        <TextView
            android:id="@+id/item_master_items_type"
            android:text="sadsadsad"
            android:layout_width="@dimen/main_weight"
            android:layout_height="match_parent"
            android:layout_weight="8"/>
        <TextView
            android:id="@+id/item_master_items_price"
            android:text="sadsadsad"
            android:layout_width="@dimen/main_weight"
            android:textColor="#DA0001"
            android:gravity="right"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>