<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <com.othershe.library.NiceImageView
            android:id="@+id/master_niv"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_margin="8dp"
            app:corner_radius="15dp"/>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="2dp"
            android:layout_marginRight="5dp">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="#000" android:lines="1" android:ellipsize="end"
                  android:id="@+id/master_title_tv" android:layout_marginLeft="5dp"/>

        <TextView
                android:id="@+id/master_teacher_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="12dp"
                android:lines="1"
                android:textColor="#ccc"/>

    </LinearLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="2dp">

        <TextView
                android:id="@+id/master_teacherTitl_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textColor="#ccc"
                android:textSize="12dp"/>

        <TextView
                android:id="@+id/master_price_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:textSize="12dp"
                android:textColor="#980340"/>

    </LinearLayout>

</LinearLayout>