<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="@dimen/bottombarOrHeardHeight">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="会员"
            android:textSize="@dimen/banner_textsize"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="@color/textColor"/>
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_weight"
        android:layout_weight="1"
        android:id="@+id/vip_smart">
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/vip_recycler"></android.support.v7.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>



</LinearLayout>