<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardUseCompatPadding="true"
    app:cardElevation="10dp"
    app:cardCornerRadius="5dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp">

     <ImageView
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:src="@mipmap/girl_bg"
         android:scaleType="centerCrop"
         android:id="@+id/item_home_bg_img"
         />

        <ImageView
            android:id="@+id/item_home_logo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/splash_img"
            android:layout_alignParentBottom="true"
            android:layout_margin="5dp"/>

        <TextView
            android:id="@+id/item_home_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:gravity="center_horizontal"
            android:text="这个歌手名字"
            android:textColor="#00ff00"
            android:textSize="18sp"
            android:layout_toRightOf="@id/item_home_logo_img"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            />
        <TextView
            android:id="@+id/item_home_singename"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="歌曲名字"
            android:textColor="#fff"
            android:gravity="center_horizontal"
            android:maxLines="1"
            android:layout_toRightOf="@id/item_home_logo_img"
            android:layout_above="@id/item_home_author"
            android:textSize="21sp"

            />
    </RelativeLayout>

</android.support.v7.widget.CardView>