<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             android:layout_width="200dp"
              android:orientation="vertical"
                                             android:layout_height="150dp">

    <ImageView android:layout_width="match_parent" android:layout_height="100dp"
    android:id="@+id/vip_img"
    />
    <TextView android:layout_width="match_parent" android:layout_height="20dp" android:layout_marginTop="5dp"
              android:textColor="#000000"
    android:id="@+id/vip_txt"
    />

    <RelativeLayout android:layout_width="match_parent" android:layout_height="15dp" android:layout_marginTop="10dp">


        <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:textColor="#A48B62" android:id="@+id/vip_vip" android:textSize="10sp"/>


        <TextView android:layout_width="wrap_content" android:layout_height="match_parent" android:textSize="10sp" android:textColor="#B52161"
                  android:layout_alignParentRight="true" android:id="@+id/vip_five"/>
    </RelativeLayout>

</LinearLayout>