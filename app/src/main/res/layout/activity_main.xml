<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".ui.activy.MainActivity">
    <com.example.player.a1610aplayerdemo.view.NoscorllPager android:layout_width="match_parent"
                                                            android:layout_height="0dp"
                                                            android:layout_weight="8.5"
                                                            android:id="@+id/novpg"
    ></com.example.player.a1610aplayerdemo.view.NoscorllPager>

    <RadioGroup android:layout_width="match_parent" android:layout_height="0dp" android:layout_weight="1" android:orientation="horizontal" android:id="@+id/grp">

        <RadioButton android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/rb1" android:background="@drawable/backxk" android:button="@null"/>
        <RadioButton android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/rb2" android:background="@drawable/backxxzx" android:button="@null"/>
        <RadioButton android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/rb3" android:background="@drawable/backvip" android:button="@null"/>
        <RadioButton android:layout_width="0dp" android:layout_height="match_parent" android:layout_weight="1" android:id="@+id/rb4" android:background="@drawable/backwd" android:button="@null"/>

    </RadioGroup>
</LinearLayout>