<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

   <android.support.v4.view.ViewPager
           style="@style/mm"
           android:id="@+id/main_guide_vp">
   </android.support.v4.view.ViewPager>

    <ImageView
            style="@style/mm"
            android:scaleType="centerCrop"
            android:id="@+id/main_greet_iv"
            android:visibility="gone">
    </ImageView>

    <Button
            android:id="@+id/main_guide_btn"
            android:text="@string/main_activity_button"
            app:layout_marginTopPercent="80%" style="@style/main_activity_button">
    </Button>

    <TextView
        android:id="@+id/main_greet_tv"
        android:text="@string/main_activity_text"
        style="@style/main_activity_text">
    </TextView>

</android.support.percent.PercentRelativeLayout>