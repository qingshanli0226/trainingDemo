<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/item_master_items_card"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        app:cardCornerRadius="20dp"
        app:cardMaxElevation="10dp"
        android:layout_margin="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:id="@+id/item_master_items_img"/>

            <TextView
                android:id="@+id/item_master_items_live"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="录播课"
                android:background="#9C3434"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="30dp"
                android:textColor="#fff"

                />

        </RelativeLayout>
        
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@id/item_master_items_card"
        android:layout_height="30dp">
        <TextView
            android:id="@+id/item_master_items_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="6"
            android:maxLines="1"
            android:ellipsize="end"
            android:text="adsadasdas"
            android:textColor="#000"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:text="adsadasdas"
            android:textColor="#ccc"
            android:gravity="right"
            android:id="@+id/item_master_items_teacher"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_height="20dp">

        <TextView
            android:id="@+id/item_master_items_type"
            android:text="sadsadsad"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="8"/>
        <TextView
            android:id="@+id/item_master_items_price"
            android:text="sadsadsad"
            android:layout_width="0dp"
            android:textColor="#DA0001"
            android:gravity="right"
            android:layout_height="match_parent"
            android:layout_weight="2"/>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>