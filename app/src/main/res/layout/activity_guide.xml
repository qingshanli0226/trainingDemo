<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <android.support.v4.view.ViewPager
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/guide_vp"
    />
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/guide_title1"
            android:textSize="@dimen/size_13"
            android:gravity="center"
            android:id="@+id/guide_jump"
            android:layout_alignParentRight="true"
            android:background="@color/transparency_color"
            android:visibility="visible"
    />

    <Button android:layout_width="@dimen/px_100"
            android:layout_height="@dimen/px_45"
            android:text="@string/guide_title2"
            android:background="@drawable/h1"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/px_100"
            android:id="@+id/guide_ty"
            android:visibility="gone"
    />
</RelativeLayout>