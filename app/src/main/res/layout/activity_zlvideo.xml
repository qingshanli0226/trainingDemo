<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragment.selectclass.zl.zlvideoactivity.ZLvideoActivity"
android:orientation="vertical">
    <com.example.player.a1610aplayerdemo.base.MToolBar
            android:id="@+id/zl_videoToolBar"
            android:layout_width="match_parent"
            android:layout_height="50dp">

    </com.example.player.a1610aplayerdemo.base.MToolBar>

    <ImageView
            android:id="@+id/zltitle_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
<android.support.design.widget.TabLayout
        android:id="@+id/zl_tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
android:background="#f9e9">
</android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
            android:id="@+id/zl_vp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f9e945">

    </android.support.v4.view.ViewPager>

</LinearLayout>