<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <RelativeLayout
            android:background="#8E002E"
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="#EEEEEE"
                android:text="@string/mastercalss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="280dp">
        <ImageView
                android:id="@+id/masterRecyclerView_Image"
                android:layout_width="match_parent"
                android:scaleType="fitXY"
                android:layout_height="280dp" />
        <TextView
                android:id="@+id/masterRV_LiveStatus"
                android:layout_marginTop="5dp"
                android:layout_alignParentRight="true"
                android:background="#8E002E"
                android:textColor="#EEEEEE"
                android:text="   录播   "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
    </RelativeLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:layout_marginTop="3dp"
                android:id="@+id/masterRV_CourseName"
                android:textSize="15sp"
                android:layout_marginLeft="10dp"
                android:textColor="#000000"
                android:text="智园行方钢琴大师课互动直播"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/masterRV_Price"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:textSize="20sp"
                android:textColor="#8E002E"
                android:text="35元"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/masterRV_Adress"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_below="@+id/masterRV_CourseName"
                android:text="@string/master_aaw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:id="@+id/masterRV_Teacher"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="15dp"
                android:layout_below="@+id/masterRV_CourseName"
                android:text="智园行方"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        <TextView
                android:layout_toStartOf="@+id/masterRV_Teacher"
                android:layout_marginTop="5dp"
                android:layout_below="@+id/masterRV_CourseName"
                android:text="讲师："
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_toLeftOf="@+id/masterRV_Teacher"/>
    </RelativeLayout>

</LinearLayout>