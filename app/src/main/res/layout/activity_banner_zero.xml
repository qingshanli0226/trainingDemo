<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".twomenuActivity.activity.BannerZeroActivity"
        android:orientation="vertical">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7">
        <ImageView
                android:id="@+id/back"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_back"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="加入360会员  尊享以下权益..."
                android:singleLine="true"
                android:textSize="18dp"
                android:textColor="#000000"
                android:layout_centerInParent="true"/>

    </RelativeLayout>
    <View android:layout_width="match_parent" android:layout_height="1dp" android:background="#000000"></View>

    <WebView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="9"
            android:id="@+id/wenview">
    </WebView>
    <View android:layout_width="match_parent" android:layout_height="2dp" android:background="#DE8C1D"></View>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"
            android:orientation="horizontal">
        <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="查看会员课程"
                android:textSize="20dp"
                android:textColor="#000000"
                android:gravity="center"
        />
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="#D5BA83"
                android:orientation="vertical">
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="开通会员"
                      android:textSize="25dp"
                      android:textColor="#D75C02"
                      android:layout_marginLeft="10dp"/>
            <TextView android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="1天1元钱，跟着名师学音乐"
                      android:textSize="15dp"
                      android:layout_marginLeft="10dp"/>

        </LinearLayout>


    </LinearLayout>

</LinearLayout>