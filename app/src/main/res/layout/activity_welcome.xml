<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".welcomeactivity.WelcomeActivity">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <android.support.v4.view.ViewPager
                android:id="@+id/wel_vp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>

        <RadioGroup
                android:id="@+id/wel_rg"
                android:layout_width="match_parent"
                    android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingBottom="45dp">
            <RadioButton
                    android:id="@+id/paint_1"
                    android:layout_width="wrap_content"
                         android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/paint_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/paint_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            <RadioButton
                    android:id="@+id/paint_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </RadioGroup>
        <TextView
                android:id="@+id/tv_tiao1"
                android:layout_width="60dp"
                android:layout_height="30dp"
                android:background="#DAD3D3"
                android:text="跳过->"
                android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"/>
        <Button
                android:id="@+id/ljjr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="立即进入"
               android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp"
                android:layout_centerHorizontal="true"
                android:visibility="gone"
        />
    </RelativeLayout>

    <RelativeLayout
            android:id="@+id/wel_rl"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             >

        <ImageView
                android:id="@+id/wel_img0"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/gangqin"
        android:scaleType="centerCrop"/>
        <TextView
                android:id="@+id/tv_tiao0"
                android:layout_width="60dp"
                android:layout_height="30dp"

                android:text="跳过->"
                android:textColor="#fff"
               android:layout_alignParentRight="true"
                android:layout_marginTop="20dp"
                android:layout_marginRight="20dp"
                android:gravity="center"
        />

    </RelativeLayout>



</FrameLayout>